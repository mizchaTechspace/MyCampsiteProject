<% layout('layouts/boilerplate') %>
    <div class="row">
        <div class="col-1">

        </div>
        <div class="col-8">
            <h1>All Campgrounds</h1>
        </div>
        <div class="col-3">
            <a class="nav-link btn btn-outline-info text-center rounded-3" href="/campgrounds/new"><i>Add New
                    Camp</i></a>
        </div>
    </div>
    <ul>
        <% for (let campground of campgrounds){ %>
            <div class="card mb-3">
                <div class="row">
                    <div class="col-md-4">
                        <img class="img-fluid" alt="" src="<%=campground.images[0].url%>">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= campground.title %>
                            </h5>
                            <p class="card-text">
                                <%= campground.description %>
                            </p>
                            <p class="card-text">
                                <small class="text-muted">
                                    <%= campground.location %>
                                </small>
                            </p>
                            <a class="btn btn-primary" href="/campgrounds/<%=campground._id %> ">View <%=
                                    campground.title%>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <% } %>
    </ul>